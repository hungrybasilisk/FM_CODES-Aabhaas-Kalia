// Including the library required
#include <stdio.h>

int main() {
    int n;
    //Requesting for the number of rows desired and assigning it to the variable n
    printf("Enter the number of rows: ");
    scanf("%d", &n);
    // Running a for loop that runs until i becomes equal to n
    for (int i = 1; i <= n; i++)
        {
        for (int j = 1; j <= i; j++)
         {
            printf("* ");
        }

        // Printing an "enter" after each print 
        printf("\n");
    }

    return 0;
}
